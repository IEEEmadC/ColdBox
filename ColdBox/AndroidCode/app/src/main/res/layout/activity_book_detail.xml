<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_book_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hvacci.vaccination.BookDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/bookdetailsavi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            app:indicatorName="BallPulseIndicator"
            app:indicatorColor="@color/colorPrimary" />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="5dp"
                    android:textSize="22dp"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date"
                    android:textStyle="bold"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="22dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/bd_date"
                    android:layout_height="wrap_content"
                    android:text="2017-20-16"/>

            </LinearLayout>
            <LinearLayout
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="5dp"
                    android:textSize="22dp"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textStyle="bold"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="22dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/bd_address"
                    android:layout_height="wrap_content"
                    android:text="2017-20-16"/>

            </LinearLayout>
            <TextView
                android:background="#e2e2e2"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vaccination Details"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="5dp"
                    android:textSize="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vaccine name "/>
                <TextView
                    android:textSize="22dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/bd_vaccine"
                    android:layout_height="wrap_content"
                    android:text="2017-20-16"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="5dp"
                    android:textSize="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="descrption"/>
                <TextView
                    android:textSize="22dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/bd_desc"
                    android:layout_height="wrap_content"
                    android:text=";asdjakdjsalksjdlaksjdlskjdlksdjlkdjldkjdlkajsdlkasjdlkasjdlaksjdlksjdlskjdadkmlwkqwlkdwqlkdmqwklw"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="5dp"
                    android:textSize="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="price"/>
                <TextView
                    android:textSize="22dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:id="@+id/bd_price"/>

            </LinearLayout>
            <TextView
                android:background="#e2e2e2"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paramedics Details"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="5dp"
                    android:textSize="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"/>
                <TextView
                    android:textSize="22dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="mina"
                    android:id="@+id/bd_pname"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="5dp"
                    android:textSize="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"/>
                <TextView
                    android:textSize="22dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="9465421643"
                    android:id="@+id/bd_pcontact"/>

            </LinearLayout>
            <LinearLayout
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="5dp"
                    android:textSize="22dp"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textStyle="bold"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="22dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:id="@+id/bd_status"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

